<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<fx:root spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <Label text="Sign Up">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <font>
            <Font name="Segoe UI Bold" size="18.0" />
         </font>
      </Label>
      <Label text="Please fill in this form to create an account." />
      <Line startX="350.0" />
      <Label text="Email">
         <font>
            <Font name="Segoe UI Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="emailTextfield" promptText="Enter Email" />
      <Label text="Password">
         <font>
            <Font name="Segoe UI Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="passwordTextield" promptText="Enter Password" />
      <Label text="Repeat Password">
         <font>
            <Font name="Segoe UI Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="repeatPasswordTextfield" promptText="Repeat Password" />
      <Label text="By creating an account you agree to our Terms &amp; Privacy." />
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Button fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" prefWidth="100.0" style="-fx-background-color: red;" text="Cancel" textAlignment="CENTER" textFill="WHITE" />
            <Button fx:id="signUp" mnemonicParsing="false" prefWidth="100.0" style="-fx-background-color: lime;" text="Sign Up" textFill="WHITE" />
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets left="15.0" right="15.0" />
   </padding>
</fx:root>
